<div class="max-w-sm bg-white rounded-lg border border-gray-200 shadow-md">
  <%= image %>

  <div class="p-5">
    <% if post.subtitle.present? %>
      <%= turbo_frame_tag post do %>
        <p class="mb-3 text-base font-normal text-gray-700">
          <%= post.subtitle %>
        </p>

        <% if show_action?(rule: :edit?) %>
          <%= edit_action %>
        <% end %>

        <% if show_action?(rule: :destroy?) %>
          <%= delete_action %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
