<%# meta_tags %>

<%= form_for(post, builder: ComponentBuilder) do |f| %>
  <%= render(Form::LayoutComponent.new) do |layout| %>
    <% layout.header { "New post" } %>

    <%= f.file_field_component :image do |slot| %>
      <% slot.label { "Upload file" } %>
    <% end %>

    <%= f.text_field_component(:subtitle, type: "text", id: "subtitle") do |input| %>
      <% input.label { "Your subtitle" } %>
    <% end %>

    <%= f.button_component("Create post") %>
  <% end %>
<% end %>
